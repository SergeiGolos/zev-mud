# Production Environment Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Node.js Environment
NODE_ENV=production

# Domain Configuration (update with your actual domain)
DOMAIN=your-domain.com

# =============================================================================
# SERVICE PORTS
# =============================================================================

# Ranvier MUD Server
RANVIER_PORT=3000

# WebSocket Proxy
PROXY_PORT=8080
PROXY_SSL_PORT=8443

# Web Client
WEB_PORT=3001
WEB_SSL_PORT=3443

# Nginx Reverse Proxy
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring Services
MONITORING_PORT=9100
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOKI_PORT=3100
ALERTMANAGER_PORT=9093

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# Enable SSL/TLS (set to true for production)
SSL_ENABLED=true

# SSL Certificate Paths (inside containers)
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# SSL Certificate Directory (on host)
CERTS_PATH=./certs

# WebSocket URLs (update with your domain and protocol)
PROXY_WS_URL=ws://your-domain.com:8080
PROXY_WSS_URL=wss://your-domain.com:8443

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type (nedb, mongodb, postgresql)
DB_TYPE=nedb

# Database Connection (for external databases)
DB_HOST=
DB_PORT=
DB_NAME=ranvier
DB_USER=
DB_PASS=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Game Server Settings
MAX_PLAYERS=50
SAVE_INTERVAL=30

# Proxy Settings
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=300000

# =============================================================================
# STORAGE PATHS
# =============================================================================

# Data Storage Path (on host)
DATA_PATH=./data

# Log Storage Path (on host)
LOGS_PATH=./logs

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana Admin Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-password

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate Limiting (requests per second)
API_RATE_LIMIT=10
WEBSOCKET_RATE_LIMIT=5

# Session Configuration
SESSION_SECRET=change-this-secret-key
SESSION_TIMEOUT=3600

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Memory Limits (in MB)
RANVIER_MEMORY_LIMIT=512
PROXY_MEMORY_LIMIT=256
WEB_MEMORY_LIMIT=256

# CPU Limits (as decimal, e.g., 0.5 = 50%)
RANVIER_CPU_LIMIT=0.5
PROXY_CPU_LIMIT=0.3
WEB_CPU_LIMIT=0.3

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_PATH=./backups

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=admin@your-domain.com

# Webhook URL (for Slack/Discord notifications)
WEBHOOK_URL=

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development/testing

# NODE_ENV=development
# SSL_ENABLED=false
# LOG_LEVEL=debug
# DOMAIN=localhost